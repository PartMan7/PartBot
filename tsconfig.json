{
	"compilerOptions": {
		"baseUrl": "src",
		"lib": ["ESNext"],
		"target": "ESNext",
		"noEmit": true,
		"jsx": "react-jsx",
		"skipLibCheck": true,
		"module": "Preserve",
		"esModuleInterop": true, // Allow default-importing stuff like path
		"resolveJsonModule": true, // Allow importing JSON files
		"exactOptionalPropertyTypes": true, // Stricter checks!
		"strict": true,
		"paths": {
			"@/secrets/*": ["./secrets/src/*"],
			"@/*": ["./*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["src/web/react/**/*"]
}
